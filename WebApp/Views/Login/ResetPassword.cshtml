@model WebApp.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<link rel="stylesheet" href="~/css/signup-form.css">


@if (TempData["message"] != null)
{
    string alertType = "alert alert-" + TempData["alertType"];
    <div class="@alertType">
        @TempData["message"]
    </div>
}
<div class="signup-form">
    <div class="col-xs-8 col-xs-offset-4">
        <form role="form" asp-action="SendResetEmail" asp-controller="Login">
            <h2>Восстановление пароля</h2>
            <h5>Введите электронную почту, куда будут высланы инструкции по восстановлению пароля:</h5>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Ошибка, попробуйте снова")
                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Восстановить пароль" class="btn btn-primary" />
            }
        </form>
    </div>
</div>
