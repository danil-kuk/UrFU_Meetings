
@{
    ViewData["Title"] = "Sign In";
}

<h2>Registration</h2>

<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                Please sign up
            </h3>
        </div>
        <div class="panel-body">
            <form role="form" asp-action="Register" asp-controller="Users" method="post">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="text" name="Name" class="form-control input-sm" placeholder="First Name">
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="text" name="Surname" class="form-control input-sm" placeholder="Last Name">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="email" name="Email" class="form-control input-sm" placeholder="Email Address">
                </div>
                <div class="form-group">
                    <input type="password" name="Password" class="form-control input-sm" placeholder="Password">
                </div>
                <input type="submit" value="Register" class="btn btn-info btn-block">
            </form>
        </div>
    </div>
</div>

