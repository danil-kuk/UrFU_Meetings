
@if (User.Identity.IsAuthenticated)
{
<ul class="nav navbar-nav">
    <li class="dropdown show nav-item">
        <a class="dropdown" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="material-icons nav-link">
                account_circle
            </i>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
            @Html.ActionLink("Мои мероприятия", "MyEvents", "UserProfile", routeValues: null, htmlAttributes: new { id = "myEventsLink", @class = "dropdown-item" })
            @Html.ActionLink("Личный кабинет", "Index", "UserProfile", routeValues: null, htmlAttributes: new { id = "accountLink", @class = "dropdown-item" })
            @Html.ActionLink("Настройки", "Settings", "UserProfile", routeValues: null, htmlAttributes: new { id = "settingsLink", @class = "dropdown-item" })
            @Html.ActionLink("Выход", "Logout", "Login", routeValues: null, htmlAttributes: new { id = "logoutLink", @class = "dropdown-item" })
        </div>
    </li>
</ul>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">@Html.ActionLink("Регистрация", "Index", "Registration", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Вход", "Index", "Login", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
