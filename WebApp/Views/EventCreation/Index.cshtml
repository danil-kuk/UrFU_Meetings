@model WebApp.Models.DataModels.Entities.Event
@{
    ViewData["Title"] = "EventCreation";
}

<div class="event-editor-form">
    <form role="form" asp-action="CreateNewEvent" asp-controller="EventCreation">
        <div class="col-xs-8 col-xs-offset-4">
            <h2>Создание нового мероприятия</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Не удалось создать мероприятие, попробуйте снова")
                <div class="row">
                    <partial name="_EventEditor" />
                    <div class="col-lg">
                        <input type="submit" value="Создать мероприятие" class="submit-button" />
                    </div>
                </div>
            }
        </div>
    </form>
</div>

